extends base
block content
    div.login
        div.info
            h4 회원가입 창
        div.justSignup
            form(method="post")
                label(for="nickname").form-label.mt-4 닉네임
                input(type="text" name="nickname" placeholder="닉네임...").form-control#nickname
                label(for="email").form-label.mt-4 이메일
                input(type="email" name="email" placeholder="이메일...").form-control#email
                label(for="password").form-label.mt-4 비밀번호
                input(type="password" name="password"  placeholder="비밀번호...").form-control#password
                label(for="confirmPassword").form-label.mt-4 비밀번호 확인
                input(type="password" name="confirmPassword" placeholder="비밀번호 확인...").form-control#confirmPassword
                div
                    input(type="submit" value="회원가입").btn.btn-sm.btn-primary
        div.line
        div.kakao
            a(id="custom-login-btn" href="/login/start")
                img(src="//k.kakaocdn.net/14/dn/btroDszwNrM/I6efHub1SN5KCJqLm1Ovx1/o.jpg", alt="카카오 로그인 버튼", width="180")
        div.add
            span 계정이 있으십니까?
            a(href="/login") 로그인하기 &rarr;
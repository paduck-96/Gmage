extends base
block content
    div.login
        div.info
            h4 로그인 창
        div.justLogin
            form(method="post")
                label(for="email").form-label.mt-4 이메일
                input(type="email" name="email" aria-describedby="emailHelp" placeholder="이메일 입력...").form-control#email
                small.form-text.text-muted 편하게 작성해주세요
                label(for="password").form-label.mt-4 비밀번호
                input(type="password" name="password" placeholder="비밀번호...")#password.form-control
                div
                    input(type="submit" value="로그인").btn.btn-sm.btn-primary
        div.line
        div.kakao
            a(id="custom-login-btn" href="/login/start")
                img(src="//k.kakaocdn.net/14/dn/btroDszwNrM/I6efHub1SN5KCJqLm1Ovx1/o.jpg", alt="카카오 로그인 버튼", width="180")
        div.add
            span 계정이 없으십니까?  
            a(href="/signUp") 바로 만들기 &rarr;